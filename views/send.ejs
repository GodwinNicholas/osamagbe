<div class="send">

    <h1>send email</h1>

    <div class="email-form-wrap container">
        <form method="POST" action="/send">
            <div class="input group">
                <label for="subject">Subject:</label>
                <input type="text" id="subject" class="form-control" name="subject" placeholder="Subject" required>
            </div>
            <div class="input group">
                <label for="body">Body</label>
                <input type="hidden" id="hiddenInput" name="body" required>
                <div id="editor" class="editor"></div>
            </div>
            <div class="input-group">
                <button class="btn btn-primary" id="sendbtn" type="submit">
                    <i class="fas fa-paper-plane"></i>
                    send
                </button>
            </div>
        </form>
    </div>

    <script src="/js/quill.js"></script>
    <script src="/js/sendmail.js"></script>
    <script src="/js/actions.js"></script>
    <script src="/js/formValidation.js"></script>
</div>